<!-- views/register.handlebars: -->
<!-- Register form view -->
<form action="/auth/register" method="POST">
  <!-- Handlebars conditional to check for an error message -->
  {{#if error}}
  <div class="alert alert-danger" role="alert">
    <!-- Displaying the error message -->
    {{error}}
  </div>
  {{/if}}

  <!-- Input field for username -->
  <div>
    <label for="username">Username:</label>
    <input type="text" id="username" name="username" required>
  </div>

  <!-- Input field for email -->
  <div>
    <label for="email">Email:</label>
    <input type="email" id="email" name="email" required>
  </div>

  <!-- Input field for password -->
  <div>
    <label for="password">Password:</label>
    <input type="password" id="password" name="password" required>
  </div>

  <!-- Submit button to register -->
  <div>
    <button type="submit">Register</button>
    <!-- Link to go back to the home page -->
    <a href="/"><button type="button">Back to Home</button></a>
  </div>

  <!-- Link to switch to login page if the user already has an account -->
  <div>
    <p>Already have an account? <a href="/login">Login instead</a></p>
  </div>
</form>

<!-- Linking the JavaScript file for handling the registration process -->
<script src="/js/register.js"></script>

