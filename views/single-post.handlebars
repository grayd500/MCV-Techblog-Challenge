{{!-- views/single-post.handlebars: --}}
<main>
  <h1>{{post.title}}</h1>
  <p>{{post.content}}</p>
  <p>Posted by {{post.user.username}} on {{format_date post.createdAt}}</p>

  <!-- Comments Section -->
  <div class="comments">
    <h3>Comments:</h3>
    {{#if post.comments}}
      {{#each post.comments as |comment|}}
        <div class="comment">
          <p>{{comment.text}}</p>
          <p>Comment by {{comment.user.username}} on {{format_date comment.createdAt}}</p>
        </div>
      {{/each}}
    {{else}}
      <p>No comments yet.</p>
    {{/if}}
  </div>

  <!-- Comment Submission Form -->
  {{#if loggedIn}}
    <form id="comment-form" onsubmit="return false;">
      <textarea name="comment" placeholder="Add a comment..."></textarea>
      <button type="submit">Submit Comment</button>
    </form>
  {{/if}}
</main>